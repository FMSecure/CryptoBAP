INCLUDES = ./lifter ./l3
OPTIONS = QUIT_ON_FAILURE

default: all

#SMLFILES = $(patsubst %Script.sml,%Theory.uo,$(wildcard *.sml))
#SMLFILES =
TARGETS = $(patsubst %.sml,%.uo,$(SMLFILES))

ifdef POLY
HOLHEAP = ./l3/HolBA_l3-heap
NEWHOLHEAP = HolBATools-heap
EXTRA_CLEANS = $(NEWHOLHEAP) $(NEWHOLHEAP).o

HEAPSRC = $(wildcard ./lifter/*Script.sml) \
          $(wildcard ./lifter/*Lib.sml)

HEAPINC  = $(patsubst %Lib.sml,%Lib, $(patsubst %Script.sml,%Theory,$(HEAPSRC)))
HEAPDEPS = $(patsubst %Lib.sml,%Lib.uo, $(patsubst %Script.sml,%Theory.uo,$(HEAPSRC)))

$(NEWHOLHEAP): $(HEAPDEPS)
	$(protect $(HOLDIR)/bin/buildheap) -b $(HOLHEAP) -o $(NEWHOLHEAP) $(HEAPINC)

endif

all: $(TARGETS) $(NEWHOLHEAP)
.PHONY: all
